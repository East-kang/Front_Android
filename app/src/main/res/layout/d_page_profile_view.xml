<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EAEAEB"
    tools:context=".page.d_menu.ProfileView">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:background="@drawable/vector_image_back_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/cancelButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="취소"
            android:textSize="18sp"
            android:textColor="#FF5C5C"
            android:gravity="center"
            android:background="#EAEAEB"
            android:visibility="gone"
            android:stateListAnimator="@null"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="내 프로필"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/editButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="편집"
            android:textSize="18sp"
            android:textColor="#4285F4"
            android:gravity="center"
            android:background="#EAEAEB"
            android:paddingStart="10dp"
            android:stateListAnimator="@null"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" >

        <LinearLayout
            android:id="@+id/body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginHorizontal="15dp"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/field1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/title_1st"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="로그인 정보"
                    android:layout_marginStart="10dp"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:paddingHorizontal="18dp"
                    android:paddingVertical="8dp"
                    android:background="@drawable/design_categories_button" >

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/id_Field"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="4dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" >

                        <TextView
                            android:id="@+id/title_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="아이디"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>

                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/guideline1_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintGuide_percent="0.22" />

                        <View
                            android:id="@+id/view1_1"
                            android:layout_width="1dp"
                            android:layout_height="0dp"
                            android:background="#EAEAEB"
                            app:layout_constraintStart_toStartOf="@id/guideline1_1"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />

                        <TextView
                            android:id="@+id/user_id"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="gildong2"
                            android:textColor="@color/black"
                            android:textSize="17sp"
                            android:gravity="end"
                            android:paddingEnd="8dp"
                            android:paddingVertical="4dp"
                            android:layout_marginStart="5dp"
                            app:layout_constraintStart_toStartOf="@id/guideline1_1"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <View
                        android:id="@+id/line1_1"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#EAEAEB"
                        android:layout_marginTop="6dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/id_Field" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/pw_Field"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="4dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/line1_1">

                        <TextView
                            android:id="@+id/title_pw"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="비밀번호"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>

                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/guideline1_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintGuide_percent="0.22" />

                        <View
                            android:id="@+id/view1_2"
                            android:layout_width="1dp"
                            android:layout_height="0dp"
                            android:background="#EAEAEB"
                            app:layout_constraintStart_toStartOf="@id/guideline1_2"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />

                        <EditText
                            android:id="@+id/user_pw"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:hint="변경할 비밀번호를 입력하세요"
                            android:textSize="17sp"
                            android:background="@drawable/design_gray_solid"
                            android:gravity="end"
                            android:paddingEnd="8dp"
                            android:paddingVertical="4dp"
                            android:layout_marginStart="5dp"
                            app:layout_constraintStart_toStartOf="@id/guideline1_2"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />


                        <TextView
                            android:id="@+id/user_pw_rule"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="8~16자의 영문, 숫자를 사용하세요"
                            android:textSize="10sp"
                            android:textColor="#1F70CC"
                            android:layout_marginHorizontal="5dp"
                            android:gravity="end"
                            app:layout_constraintStart_toStartOf="@id/guideline1_2"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/user_pw" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <View
                        android:id="@+id/line1_2"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#EAEAEB"
                        android:layout_marginVertical="6dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/pw_Field"/>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/email_Field"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="4dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/line1_2">

                        <TextView
                            android:id="@+id/title_email"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="이메일"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />

                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/guideline1_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintGuide_percent="0.22" />

                        <View
                            android:id="@+id/view1_3"
                            android:layout_width="1dp"
                            android:layout_height="0dp"
                            android:background="#EAEAEB"
                            app:layout_constraintStart_toStartOf="@id/guideline1_3"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />

                        <EditText
                            android:id="@+id/user_email"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="gildong22@naver.com"
                            android:textColor="@color/black"
                            android:hint="변경할 이메일을 입력하세요"
                            android:textSize="17sp"
                            android:enabled="false"
                            android:background="@color/white"
                            android:gravity="end"
                            android:paddingEnd="8dp"
                            android:paddingVertical="4dp"
                            android:layout_marginStart="5dp"
                            android:inputType="textEmailAddress"
                            app:layout_constraintStart_toStartOf="@id/guideline1_3"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/user_email_rule"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="이메일을 정확히 입력해주세요"
                            android:textSize="10sp"
                            android:textColor="#1F70CC"
                            android:layout_marginHorizontal="5dp"
                            android:gravity="end"
                            app:layout_constraintStart_toStartOf="@id/guideline1_3"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/user_email" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/field2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="15dp">

                <TextView
                    android:id="@+id/title_2st"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="사용자 정보"
                    android:layout_marginStart="10dp"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:paddingHorizontal="14dp"
                    android:paddingVertical="12dp"
                    android:background="@drawable/design_categories_button" >

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/name_Field"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" >

                        <TextView
                            android:id="@+id/title_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="이름"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>

                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/guideline2_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintGuide_percent="0.22" />

                        <View
                            android:id="@+id/view2_1"
                            android:layout_width="1dp"
                            android:layout_height="0dp"
                            android:background="#EAEAEB"
                            app:layout_constraintStart_toStartOf="@id/guideline2_1"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />

                        <TextView
                            android:id="@+id/user_name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="홍길동"
                            android:textColor="@color/black"
                            android:textSize="17sp"
                            android:gravity="end"
                            android:paddingEnd="8dp"
                            android:paddingVertical="4dp"
                            android:layout_marginStart="5dp"
                            app:layout_constraintStart_toStartOf="@id/guideline2_1"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <View
                        android:id="@+id/line2_1"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#EAEAEB"
                        android:layout_marginTop="6dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/name_Field" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/birth_Field"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="6dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/line2_1">

                        <TextView
                            android:id="@+id/title_birth"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="생년월일"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>

                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/guideline2_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintGuide_percent="0.22" />

                        <View
                            android:id="@+id/view2_2"
                            android:layout_width="1dp"
                            android:layout_height="0dp"
                            android:background="#EAEAEB"
                            app:layout_constraintStart_toStartOf="@id/guideline2_2"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />

                        <EditText
                            android:id="@+id/user_birth"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="19980404"
                            android:hint="YYYY/MM/DD"
                            android:textSize="17sp"
                            android:textColor="@color/black"
                            android:gravity="end|center"
                            android:background="@color/white"
                            android:inputType="number"
                            android:enabled="false"
                            android:paddingEnd="8dp"
                            android:paddingVertical="4dp"
                            android:layout_marginStart="5dp"
                            android:maxLength="8"
                            app:layout_constraintStart_toStartOf="@id/guideline2_2"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/user_birth_rule"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="생년월일을 정확히 입력해주세요"
                            android:textSize="10sp"
                            android:textColor="#1F70CC"
                            android:layout_marginHorizontal="5dp"
                            android:gravity="end"
                            app:layout_constraintStart_toStartOf="@id/guideline2_2"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/user_birth" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <View
                        android:id="@+id/line2_2"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#EAEAEB"
                        android:layout_marginVertical="6dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/birth_Field"/>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/phone_Field"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="6dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/line2_2">

                        <TextView
                            android:id="@+id/title_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="전화번호"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>

                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/guideline2_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintGuide_percent="0.22" />

                        <View
                            android:id="@+id/view2_3"
                            android:layout_width="1dp"
                            android:layout_height="0dp"
                            android:background="#EAEAEB"
                            app:layout_constraintStart_toStartOf="@id/guideline2_3"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />

                        <EditText
                            android:id="@+id/user_phone"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="010-1234-5678"
                            android:hint="전화번호를 입력하세요"
                            android:textSize="17sp"
                            android:textColor="@color/black"
                            android:gravity="end|center"
                            android:enabled="false"
                            android:background="@color/white"
                            android:inputType="phone"
                            android:paddingEnd="8dp"
                            android:paddingVertical="4dp"
                            android:layout_marginStart="5dp"
                            android:maxLength="13"
                            app:layout_constraintStart_toStartOf="@id/guideline2_3"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/user_phone_rule"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="전화번호를 정확히 입력해주세요"
                            android:textSize="10sp"
                            android:textColor="#1F70CC"
                            android:layout_marginHorizontal="5dp"
                            android:gravity="end"
                            app:layout_constraintStart_toStartOf="@id/guideline2_3"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/user_phone" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <View
                        android:id="@+id/line2_3"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#EAEAEB"
                        android:layout_marginVertical="6dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/phone_Field"/>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/gender_Field"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="6dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/line2_3">

                        <TextView
                            android:id="@+id/title_gender"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="성별"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>

                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/guideline2_4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintGuide_percent="0.22" />

                        <View
                            android:id="@+id/view2_4"
                            android:layout_width="1dp"
                            android:layout_height="0dp"
                            android:background="#EAEAEB"
                            app:layout_constraintStart_toStartOf="@id/guideline2_4"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />

                        <TextView
                            android:id="@+id/user_gender"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="남자"
                            android:textColor="@color/black"
                            android:textSize="17sp"
                            android:gravity="end"
                            android:paddingEnd="8dp"
                            android:paddingVertical="4dp"
                            android:layout_marginStart="5dp"
                            android:visibility="visible"
                            app:layout_constraintStart_toStartOf="@id/guideline2_4"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />

                        <RadioGroup
                            android:id="@+id/gender_Group"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:visibility="gone"
                            app:layout_constraintStart_toStartOf="@+id/guideline2_4"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:gravity="center" >

                            <View
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1" />

                            <RadioButton
                                android:id="@+id/radioMale"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="  남성"
                                android:textSize="17sp" />

                            <RadioButton
                                android:id="@+id/radioFemale"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="  여성"
                                android:textSize="17sp" />
                        </RadioGroup>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <View
                        android:id="@+id/line2_4"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#EAEAEB"
                        android:layout_marginVertical="6dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/gender_Field"/>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/married_Field"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="6dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/line2_4">

                        <TextView
                            android:id="@+id/title_married"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="결혼 여부"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>

                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/guideline2_5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintGuide_percent="0.22" />

                        <View
                            android:id="@+id/view2_5"
                            android:layout_width="1dp"
                            android:layout_height="0dp"
                            android:background="#EAEAEB"
                            app:layout_constraintStart_toStartOf="@id/guideline2_5"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />

                        <TextView
                            android:id="@+id/user_married"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="기혼"
                            android:textColor="@color/black"
                            android:textSize="17sp"
                            android:gravity="end"
                            android:paddingEnd="8dp"
                            android:paddingVertical="4dp"
                            android:layout_marginStart="5dp"
                            android:visibility="visible"
                            app:layout_constraintStart_toStartOf="@id/guideline2_5"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />

                        <RadioGroup
                            android:id="@+id/married_Group"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:visibility="gone"
                            app:layout_constraintStart_toStartOf="@+id/guideline2_5"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:gravity="center" >

                            <View
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1" />

                            <RadioButton
                                android:id="@+id/radioSingle"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="  미혼"
                                android:textSize="17sp" />

                            <RadioButton
                                android:id="@+id/radioMarried"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="  기혼"
                                android:textSize="17sp" />
                        </RadioGroup>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <View
                        android:id="@+id/line2_5"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#EAEAEB"
                        android:layout_marginVertical="6dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/married_Field"/>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/job_Field"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="6dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/line2_5">

                        <TextView
                            android:id="@+id/title_job"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="직업"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>

                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/guideline2_6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintGuide_percent="0.22" />

                        <View
                            android:id="@+id/view2_6"
                            android:layout_width="1dp"
                            android:layout_height="0dp"
                            android:background="#EAEAEB"
                            app:layout_constraintStart_toStartOf="@id/guideline2_6"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />

                        <TextView
                            android:id="@+id/user_job"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="회사원"
                            android:textColor="@color/black"
                            android:textSize="17sp"
                            android:gravity="end"
                            android:paddingEnd="8dp"
                            android:paddingVertical="4dp"
                            android:layout_marginStart="5dp"
                            android:visibility="visible"
                            app:layout_constraintStart_toStartOf="@id/guideline2_6"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />

                        <Spinner
                            android:id="@+id/job_spinner"
                            android:layout_width="200dp"
                            android:layout_height="40dp"
                            android:background="@drawable/design_spinner_window"
                            android:layout_gravity="end"
                            android:overlapAnchor = "false"
                            android:visibility="gone"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <EditText
                            android:id="@+id/job_etc"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/design_gray_solid"
                            android:layout_gravity="center"
                            android:hint="직업을 입력하세요"
                            android:textSize="17sp"
                            android:gravity="end"
                            android:paddingVertical="4dp"
                            android:paddingEnd="8dp"
                            android:layout_marginHorizontal="5dp"
                            android:layout_marginTop="5dp"
                            android:visibility="gone"
                            app:layout_constraintStart_toStartOf="@id/guideline2_6"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/job_spinner"/>

                        <TextView
                            android:id="@+id/user_job_rule"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="직업명을 정확히 입력해주세요"
                            android:textSize="10sp"
                            android:textColor="#1F70CC"
                            android:layout_marginHorizontal="5dp"
                            android:gravity="end"
                            android:visibility="gone"
                            app:layout_constraintStart_toStartOf="@id/guideline2_6"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/job_etc" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <LinearLayout
                    android:id="@+id/field3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="15dp" >

                    <TextView
                        android:id="@+id/title_3st"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="건강 상태"
                        android:layout_marginStart="10dp"
                        android:textStyle="bold"
                        android:textSize="16sp" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:layout_marginTop="5dp"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="12dp"
                        android:background="@drawable/design_categories_button" >
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>