<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CategoryView">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:background="@drawable/resize_back_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="보험 상품"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <HorizontalScrollView
        android:id="@+id/menu_scrollView"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/category_Bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/group_Entire"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/category_Entire"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="전체"
                    android:paddingTop="14dp"
                    android:paddingEnd="2dp"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:gravity="center"
                    android:background="@android:color/transparent" />

                <View
                    android:id="@+id/underline_Entire"
                    android:layout_width="match_parent"
                    android:layout_height="2.5dp"
                    android:layout_marginHorizontal="14dp"
                    android:background="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/group0"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/category0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="암"
                    android:paddingTop="14dp"
                    android:paddingEnd="2dp"
                    android:textColor="#8D8D92"
                    android:textSize="17sp"
                    android:background="@android:color/transparent" />

                <View
                    android:id="@+id/underline0"
                    android:layout_width="match_parent"
                    android:layout_height="2.5dp"
                    android:layout_marginHorizontal="14dp"
                    android:background="@color/white"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/group1"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/category1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="건강"
                    android:paddingTop="14dp"
                    android:paddingEnd="2dp"
                    android:textColor="#8D8D92"
                    android:textSize="17sp"
                    android:background="@android:color/transparent" />

                <View
                    android:id="@+id/underline1"
                    android:layout_width="match_parent"
                    android:layout_height="2.5dp"
                    android:layout_marginHorizontal="14dp"
                    android:background="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/group2"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/category2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="사망"
                    android:paddingTop="14dp"
                    android:paddingEnd="2dp"
                    android:textColor="#8D8D92"
                    android:textSize="17sp"
                    android:background="@android:color/transparent" />

                <View
                    android:id="@+id/underline2"
                    android:layout_width="match_parent"
                    android:layout_height="2.5dp"
                    android:layout_marginHorizontal="14dp"
                    android:background="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/group3"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/category3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="저축•연금"
                    android:paddingTop="14dp"
                    android:paddingEnd="2dp"
                    android:textColor="#8D8D92"
                    android:textSize="17sp"
                    android:background="@android:color/transparent" />

                <View
                    android:id="@+id/underline3"
                    android:layout_width="match_parent"
                    android:layout_height="2.5dp"
                    android:layout_marginHorizontal="5dp"
                    android:background="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/group4"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/category4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="유아"
                    android:paddingTop="14dp"
                    android:paddingEnd="2dp"
                    android:textColor="#8D8D92"
                    android:textSize="17sp"
                    android:background="@android:color/transparent" />

                <View
                    android:id="@+id/underline4"
                    android:layout_width="match_parent"
                    android:layout_height="2.5dp"
                    android:layout_marginHorizontal="14dp"
                    android:background="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/group5"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/category5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="기타"
                    android:paddingTop="14dp"
                    android:paddingEnd="2dp"
                    android:textColor="#8D8D92"
                    android:textSize="17sp"
                    android:background="@android:color/transparent" />

                <View
                    android:id="@+id/underline5"
                    android:layout_width="match_parent"
                    android:layout_height="2.5dp"
                    android:layout_marginHorizontal="14dp"
                    android:background="@color/white" />
            </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>

    <ScrollView
        android:id="@+id/insurance_scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#EEF2FD"
        app:layout_constraintTop_toBottomOf="@id/menu_scrollView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:id="@+id/insurance_linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

        </LinearLayout>


    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>