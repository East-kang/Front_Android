                android:layout_width="23dp"
                android:layout_height="23dp"
                android:background="@drawable/image_logo_samsung"
                app:layout_constraintBottom_toTopOf="@id/name0"
                app:layout_constraintStart_toStartOf="@id/name0" />

            <TextView
                android:id="@+id/company0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="기업명"
                android:textColor="#666666"
                android:textSize="12sp"
                app:layout_constraintBottom_toTopOf="@id/name0"
                app:layout_constraintStart_toEndOf="@id/icon0"
                app:layout_constraintTop_toTopOf="@id/icon0" />

            <TextView
                android:id="@+id/category0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginBottom="3dp"
                android:background="@drawable/design_category_tag"
                android:paddingHorizontal="3dp"
                android:paddingVertical="1dp"
                android:text="카테고리"
                android:textColor="@color/black"
                android:textSize="6sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/icon0"
                app:layout_constraintStart_toEndOf="@id/company0" />


            <TextView
                android:id="@+id/bookmark0"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="13dp"
